<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="structure_002" model="hr.payroll.structure">
            <field name="name">Regular Pay</field>
            <field name="type_id" ref="hr_contract.structure_type_employee"/>
            <field name="unpaid_work_entry_type_ids"
                   eval="[(4, ref('hr_work_entry_contract.work_entry_type_unpaid_leave'))]"/>
            <field name="country_id" eval="False"/>
        </record>

        <record id="mobile_allowance_test" model="hr.allowance">
            <field name="name">Mobile Allowance</field>
            <field name="code" eval="100"></field>
            <field name="active" eval="True"/>
        </record>

        <record id="hr_salary_rule_allowance_by_code" model="hr.salary.rule">
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="code">Mob-ALW</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result=(contract.get_allowances_by_code(100))</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="name">Mobile Allowances</field>
            <field name="sequence" eval="51"/>
            <field name="note">Get mobile allowances granted to employee</field>
            <field name="struct_id" ref="structure_002"/>
        </record>
        <record id="hr_salary_rule_allowance" model="hr.salary.rule">
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="code">ALLOWANCES</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result=(contract.get_all_allowances())</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="name">All Allowances</field>
            <field name="sequence" eval="51"/>
            <field name="note">Get all allownaces granted to employee</field>
            <field name="struct_id" ref="structure_002"/>
        </record>
    </data>
</odoo>