<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		
		<record id="wizard_mass_cancel_purchase" model="ir.ui.view">
			<field name="name">wizard.mass.cancel.purchse.form</field>
			<field name="model">mass.cancel.wizard.purchase</field>
			<field name="arch" type="xml">
				<form string="Mass Cancel" >
					<group col="4" colspan="2" >
						<field name="mass_cancel_purchase" string="Are you sure want to cancel all selected Purchase Order?"/>
					</group>
					<footer>
	
						<button name="on_click_purchase" string="Cancel Order"
							type="object" class="oe_highlight" />
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="bi_act_mass_cancel_purchse_wizard" model="ir.actions.act_window">
			<field name="name">bi.act.mass.cancel.purchase.wizard</field>
			<field name="res_model">mass.cancel.wizard.purchase</field>
			<field name="binding_view_types">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="wizard_mass_cancel_purchase" />
			<field name="target">new</field>
		</record>

	</data>
</odoo>