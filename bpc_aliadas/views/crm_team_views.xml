<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <record id="crm_team_view_form_aliadas" model="ir.ui.view">
            <field name="model">crm.team</field>
            <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options_active']" position="inside">
                    <div class="o_row" style="display:inherit">
                        <field name="not_project"/><label for="not_project"/>
                    </div>
                    <div class="o_row" style="display:inherit">
                        <field name="authorization_payment_term"/><label for="authorization_payment_term"/>
                    </div>
                    <div class="o_row" style="display:inherit">
                        <field name="hide_columns_mim_max"/><label for="hide_columns_mim_max"/>
                    </div>
                </xpath>
            </field>
        </record>



</odoo>