<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="helpdesk_ticket_view_form_aliadas">
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='email_cc']" position="after">
                <label for="contract" string="Contrato NÂ°"/>
                <div>
                    <field name="contract" class="oe_inline"/>
                    <button name="view_subscription_by_contract" attrs="{'invisible': [('contract','=',False)]}"
                            class="btn btn-link ml-2" string="Ver contrato"
                            title="Ver contrato"
                            icon="fa-arrow-circle-o-right"
                            type="object"/>
                </div>
                <field name="subscription_id"/>
                <field name="local_ids" widget="many2many_tags"/>
                <field name="square_id" />
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="commercial_name"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="helpdesk_tickets_view_tree_aliadas">
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_tickets_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ticket_type_id']" position="before">
                <field name="contract"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="helpdesk_ticket_view_form_inherit_stock_user_aliadas">
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_repair.helpdesk_ticket_view_form_inherit_stock_user"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='%(helpdesk_repair.action_repair_order_form)d']" position="attributes">
                <attribute name="context">{}</attribute>
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>


</odoo>
