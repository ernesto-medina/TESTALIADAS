                                    <!--                                        <span t-esc="l_one.price_unit" t-options='{"widget": "monetary", "display_currency": l_one.pricelist_id.currency_id}'/>-->
                                    <!--                                    </t>-->
                                    <!--                                    <t t-else="">-->
                                    <!--                                        <span t-esc="l_one.price_unit" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>-->
                                    <!--                                    </t>-->
                                    <span t-esc="l_one.price_unit" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>

                                </td>
                                <td class="text-right">
                                    <span t-esc="l_one.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>


                                </td>
                                <t t-set="l_one_total" t-value="l_one_total + l_one.price_total"/>
                                <t t-set="l_one_tax" t-value="l_one_tax + l_one.price_tax"/>

                            </tr>
                        </t>
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3" class="text-right">
                                Impuestos
                            </th>
                            <th class="text-right">
