<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!--Todo: Attributes Tree-->
        <record model="ir.ui.view" id="view_employee_documents_checklist_tree">
            <field name="name">employee.documents.check_list.tree</field>
            <field name="model">employee.documents.check_list</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="type" required="1"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="company_id"/>
                    <field name="state_active"/>
                    <field name="date_due"/>
                </tree>
            </field>
        </record>

        <record id="view_employee_documents_checklist_form" model="ir.ui.view">
            <field name="name">employee.documents.check_list.form</field>
            <field name="model">employee.documents.check_list</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="type" required="1"/>
                                <field name="sequence"/>
                                <field name="name"/>
                                <field name="date_due"/>
                            </group>
                            <group>
                                <field name="state_active"/>
                                <field name="company_id"/>
                                <field name="description"/>
                            </group>
                        </group>

                    </sheet>
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_employee_documents_checklist" model="ir.actions.act_window">
            <field name="name">Check list documentos de empleados</field>
            <field name="res_model">employee.documents.check_list</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_employee_documents_checklist_tree"/>
            <field name="domain">[('type','=','sale')]</field>
            <field name="context">{'default_type': 'sale', 'type': 'sale'}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear elemento para check list
                </p>
            </field>
        </record>

        <record id="action_employee_documents_checklist_purchase" model="ir.actions.act_window">
            <field name="name">Check list documentos proveedores</field>
            <field name="res_model">employee.documents.check_list</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_employee_documents_checklist_tree"/>
            <field name="domain">[('type','=','purchase')]</field>
            <field name="context">{'default_type': 'purchase', 'type': 'purchase'}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear elemento para check list
                </p>
            </field>
        </record>

        <menuitem id="menu_employee_documents_checklist"
                  name="Check List documentos empleados"
                  parent="hr.menu_human_resources_configuration"
                  action="action_employee_documents_checklist"
                  sequence="190"/>

<!--        <menuitem id="menu_sale_order_checklist_documents_sale"-->
<!--                  name="Check-List documentos"-->
<!--                  parent="sale.menu_sale_config"-->
<!--                  action="action_documents_checklist"-->
<!--                  sequence="91"/>-->

        <menuitem id="menu_sale_order_checklist_employee_documents_purchase"
                  name="Check-List documentos"
                  parent="hr.menu_human_resources_configuration"
                  action="action_employee_documents_checklist_purchase"
                  sequence="191"/>



    </data>
</odoo>