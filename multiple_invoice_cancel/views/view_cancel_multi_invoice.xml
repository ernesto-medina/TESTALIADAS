    <record id="view_cancel_multi_invoice_order_wizard" model="ir.ui.view">
        <field name="name">Cancel Multi Invoice</field>
        <field name="model">cancel.multi.invoice</field>
        <field name="arch" type="xml">
            <form string="Cancel Invoice Orders">
                <p class="oe_grey">
                    Are you sure you want to cancel selected Invoice ?
                </p>
                <footer> 
                    <button name="action_cancel" string="Cancel Invoices" type="object" class="btn-primary"/>
                    <button string="Not Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

